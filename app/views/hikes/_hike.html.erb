<%= form_for @hike do |f| %>
	Date <%= f.text_field :date_of_hike %><br>
	Select Trail
	<select name="hike[trail_id]">
    <% Trail.all.each do |trail| %>
        <option value="<%= trail.id %>"><%= trail.name %></option>
    <% end %>
	</select><br>
	Comments <%= f.text_area :comments %><br>
	Would you like to make this hike public? <%= f.check_box :is_public %><br><br>
	<%= f.submit "Save Hike" %>
<% end %>

