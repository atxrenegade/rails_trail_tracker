<div class="image">
	<img src="<%= @image.url %>" class="img-fluid non-gallery"><br><br>
	<div class="row">
		<div class="col-sm-8">
			<p>
				Date: <%= @image.date %><br>
				Trail: <%= @image.trail_name %><br>
				Description: <%= @image.description %><br>
				Posted By: <%= @image.username %><br><br>
			</p>
		</div>
	<div class="col-sm-4">
		<%= link_to "Update Image", build_images_path("edit"), class:"btn btn-success btn-lg btn-block" %>
		<%= link_to "Delete Image", show_image_path, method: :delete, remote: true, data: { confirm: 'Are you certain you want to delete this?' }, class:"btn btn-success btn-lg btn-block" %>
	</div>
</div>
