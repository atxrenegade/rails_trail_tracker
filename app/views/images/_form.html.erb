<%= form_for [@imageable, @image] do |f| %>
	<% if @image.errors.any? %>
		<div class="error_messages">
			<h2>Please correct the following errors:</h2>
			<ul>
				<% @image.errors.full_messages.each.do | msg | %>
					<li> <%= msg %> </li>
				<% end %>
			</ul>
		</div>
		<div class="field_with_errors">
			<%= f.label :url, "Enter image URL" %>
			<%= f.text_field :url %>

		</div>
		<div class="field_with_errors">
			<%= f.label :date, "Date taken" %>
			<%= f.text_field :date %>
		</div>
		<div class="field_with_errors">
			<%= f.label :trail_id, "Pick a trail" %>
			<%= f.text_field :trail_name %>
		</div>
		<div class="field_with_errors">
			<%= f.label :username  %>
			<%= f.text_field :username %>
		</div>
		<div class="field_with_errors">
			<%= f.label :is_public, "Do you want to allow other users to see this image" %>
			<%= f.text_field :is_public %>
		</div>
		<%= f.submit "Save Image" %>
	<% end %>
