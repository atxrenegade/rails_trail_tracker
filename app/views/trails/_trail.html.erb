<%= form_for(@trail) do |f| %>
	<%= render 'errors' %>

	<div class="form-group row field_with_errors">
		<%= f.label :name, class:"col-sm-10 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name, class:"form-control" %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :start_point, class:"col-sm-8 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :start_point, class:"form-control" %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :end_point, class:"col-sm-8 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :end_point, class:"form-control" %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label "Difficulty Rating 1-5 	(1 = easy, 5 = difficult)", class:"col-sm-8 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :difficulty_rating, class:"form-control" %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :length_of_hike, class:"col-sm-8 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :length_of_hike, class:"form-control" %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :terrain, class:"col-sm-8 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :terrain, class:"form-control" %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :description, class:"col-sm-8 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :description, class:"form-control" %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :notes, class:"col-sm-8 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_area :notes, class:"form-control" %>
		</div>
	</div><br><br>

		<%= f.submit "Save Trail", class:"btn btn-primary" %><br><br>
	<% end %>
