<div class="container">
	<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0"><%= @trail.name%></h1><br>
	Start Point: <%= @trail.start_point %><br>
	End Point: <%= @trail.end_point %><br>
	Difficulty Rating: <%= @trail.difficulty_rating %><br>
	Length of Hike: <%= @trail.length_of_hike %><br>
	Terrain: <%= @trail.terrain %><br>
	Description:  <%= @trail.description %><br>
	Notes: <%= @trail.notes %><br>
	<br><br>

	<%= link_to "Add Image", [:new, @imageable, :image] %><br>
	<%= link_to "DELETE this Trail", trail_path(@trail), data: {confirm: "Are you sure you want to DELETE this item?", method: "delete" } %><br>
	<%= link_to "Add Image", [:new, @imageable, :image] %>
	<%= link_to "Return to Trails Index", trails_path %><br>
	<%= link_to "Add New Trail", new_trail_path %><br>
	<%= link_to "Edit This Trail", edit_trail_path(@trail) %><br>
	<%= link_to "View All of My Hikes", hikes_path %><br>
	<%= link_to "Record New Hike", new_hike_path %><br>

	<%= render 'shared/all_images' %>
	<br><br>
</div>
