<h2> Log In </h2>
<% if flash[:notice] %>
    <div class="notice" style="color:red;"><%= flash[:notice]%></div>
<% end %>

<%= form_tag({controller: 'sessions', action: 'create', method: 'post'}) do %>
	<div class="form-group row">
		<label class="col-sm-5 col-form-label">Username: </label>
		<div class="col-sm-10">
			<%= text_field_tag 'user[name]'%>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-5 col-form-label">Password: </label>
		<div class="col-sm-10">
			<%= text_field_tag 'user[password]'%>
		</div>
	</div>

	<%= submit_tag 'Log In', class:"btn btn-primary" %>
<% end %>

<br>
<%= link_to "Log In with Facebook", 'auth/facebook' %><br>
<%= link_to "Are you a new user? Sign up here", '/signup' %>
