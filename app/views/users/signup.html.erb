<h2> Sign Up </h2>
<%= form_for @user, url:{action: "create"}, html: {class: "users"} do |f| %>
	<% if @user.errors.any? %>
	  <div id="error_explanation">
			<h4>Please correct the following errors:</h4>
			<ul>
			  <% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			  <% end %>
			</ul>
	  </div>
	<% end %>

	<div class="form-group row field_with_errors">
		<%= f.label :name, class:"col-sm-12 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :email, class:"col-sm-12 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :email %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :password, class:"col-sm-12 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :password %>
		</div>
	</div>

	<div class="form-group row field_with_errors">
		<%= f.label :password_confirmation, "Confirm password", class:"col-sm-12 col-form-label"%>
		<div class="col-sm-10">
			<%= f.text_field :password_confirmation %><br><br>
		</div>
	</div>

	<%= f.submit 'Sign Up', class:"btn btn-primary" %>
<% end %>
