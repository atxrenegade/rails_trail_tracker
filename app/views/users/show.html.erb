<div class="container-info">
	<div class="row">
		<div class="col-sm-8">
			<h3 class="font-weight-light text-center text-lg-left mt-4 mb-0"> Profile Page for </h3>
			<h2>
				<%= current_user.name %>
			</h2><br>
			Username: <%= current_user.name %><br>
			Email: <%= current_user.email %>
		</div>
		<div class="col-sm-4"><br>
			<% @profile_pic = Image.profile_pic(current_user.name) %>
			<% if @profile_pic %>
				<img class="profile-pic img-fluid" src="<%= @profile_pic.url %>">
				<%= link_to "Edit Profile Pic", [:edit, @imageable, :image], class:"btn btn-success btn-lg btn-block" %>
			<% else %>
				<img class="profile-pic img-fluid" src="<%= User::DEFAULT_PROFILE_PIC_URL %>">
				<%= link_to "Add Profile Pic", [:new, @imageable, :image], class:"btn btn-success btn-lg btn-block" %>
			<% end %>
			<%= link_to "Return to Trails Index", trails_path, class:"btn btn-success btn-lg btn-block" %>
			<%= link_to "View All of My Hikes", hikes_path, class:"btn btn-success btn-lg btn-block" %><br>
		</div>
	</div>
</div>
