<h3> Sign Up </h3>
<%= form_for sign_up_path(@user) do |f| %>
	<% if @user.errors.any? %>
	  <div id="error_explanation">
		<h2>Please correct the following errors:</h2>
		<ul>
		  <% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		  <% end %>
		</ul>
	  </div>
	<% end %>
	<div class="field">
		<%= f.label 'Username:' %>
		<%= text_field :name %><br>
	</div>
	<div class="field">
		<%= f.label 'Email Address:' %>
		<%= f.text_field :email %><br>
	</div>
	<div class="field">
	<%= f.label 'Password:'	%>
	<%= f.text_field :password %><br>
	</div>
	<div class="field">
	<%= f.label 'Password Confirmation:'%>
	<%= f.text_field :password_confirmation %><br><br>
	</div>
	<%= f.submit 'Save' %>
<% end %>
